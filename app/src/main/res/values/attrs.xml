<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ImageTextViewAttr">
        <attr name="topTVLines" format="integer"/>
        <attr name="leftTVLines" format="integer"/>
        <attr name="rightTVLines" format="integer"/>
        <attr name="bottomTVLines" format="integer"/>
        <attr name="topTVVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="leftTVVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="rightTVVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="bottomTVVisibility">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="text" format="string" />
        <attr name="imgSrc" format="reference" />
        <attr name="backgroundColor" format="color"/>
        <attr name="backgroundDrawable" format="reference"/>
    </declare-styleable>

</resources>